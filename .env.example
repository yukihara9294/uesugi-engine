# Mapbox Access Token
# To get a Mapbox token:
# 1. Go to https://www.mapbox.com/
# 2. Sign up for a free account
# 3. Go to your account dashboard
# 4. Create a new access token
# 5. Copy the token and paste it below
MAPBOX_ACCESS_TOKEN=YOUR_MAPBOX_TOKEN_HERE

# OpenWeatherMap API Key (optional for weather data)
OPENWEATHERMAP_API_KEY=

# e-Stat API Key (optional for statistical data)
E_STAT_API_KEY=
ESTAT_APP_ID=your_estat_app_id_here

# ODPT (公共交通オープンデータセンター) 
ODPT_ACCESS_TOKEN=your_odpt_token_here

# Twitter/X API (Basic Plan)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# WAQI (大気質データ)
WAQI_API_KEY=your_waqi_api_key_here

# Secret Key for backend
SECRET_KEY=dev_secret_key