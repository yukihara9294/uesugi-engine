# 環境設定ファイル例
# 実際の使用時は .env ファイルにコピーして値を設定してください

# 開発環境設定
NODE_ENV=development
DEBUG=true

# フロントエンド設定
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# バックエンド設定
DATABASE_URL=postgresql://user:password@db:5432/uesugi_heatmap
REDIS_URL=redis://redis:6379
SECRET_KEY=your_secret_key_here

# 外部API設定
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key
E_STAT_API_KEY=your_e_stat_api_key

# Phase 1設定
USE_DUMMY_DATA=true
DUMMY_DATA_POINTS=1000

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/app/logs/uesugi-engine.log

# セキュリティ設定
CORS_ORIGINS=["http://localhost:3000"]
API_RATE_LIMIT=1000